generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Dependencia {
  id                 String    @id @default(uuid())
  nombre_dependencia String
  domicilio          String
  telefono           String
  nombre_titular     String
  cargo_puesto       String
  departamento_area  String
  personas           Persona[]
}

model Persona {
  id            String      @id @default(uuid())
  nombre        String
  puesto        String
  correo        String
  dependencia   Dependencia @relation(fields: [dependenciaId], references: [id])
  dependenciaId String

  login Login?
}

model Login {
  id       String  @id @default(uuid())
  username String
  password String
  persona  Persona @relation(fields: [personaId], references: [id])
  personaId String @unique
}
